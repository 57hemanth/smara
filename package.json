{
  "name": "smara",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter web build",
    "deploy:web": "pnpm --filter web run deploy",
    "deploy:workers": "turbo run deploy --filter \"workers/*\"",
    "db:generate": "pnpm --filter @smara/database db:generate",
    "db:migrate:local": "pnpm --filter @smara/database db:migrate:local",
    "db:migrate:prod": "pnpm --filter @smara/database db:migrate:prod",
    "db:studio": "pnpm --filter @smara/database db:studio",
    "cf:login": "wrangler login"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "workers/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "wrangler": "^4.42.2"
  },
  "pnpm": {
    "overrides": {
      "@smara/browser-extension>react": "18.2.0",
      "@smara/browser-extension>react-dom": "18.2.0"
    }
  }
}
